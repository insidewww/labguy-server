model Preferences {
    id           Int    @id @default(autoincrement())
    artists_name String @default("Artist's Name")

    homepage_heading          String?   @default("Homepage")
    homepage_subheading       String?   @default("Sub-Heading")
    homepage_background_image ImageRef? @relation(fields: [imageRefEtag], references: [etag])
    homepage_background_video VideoRef? @relation(fields: [videoRefEtag], references: [etag])
    homepage_urls             Url[]

    enable_dashboard_darkmode Boolean @default(false)
    enable_portfolio_pdf      Boolean @default(false)

    createdAt DateTime  @default(now())
    updatedAt DateTime? @updatedAt

    videoRefEtag String? @unique
    imageRefEtag String? @unique
}
