model Preferences {
    id      Int    @id @default(autoincrement())
    creator String @default("Creator Name")
    domain  String @default("ilovedogs.com")

    homepage_heading          String    @default("Homepage")
    homepage_subheading       String    @default("Sub-Heading")
    homepage_background_image ImageRef?
    homepage_background_video VideoRef?

    enable_dashboard_darkmode Boolean @default(false)
    enable_portfolio_pdf      Boolean @default(false)

    createdAt DateTime  @default(now())
    updatedAt DateTime? @updatedAt


}
