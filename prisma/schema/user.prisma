model SocialMedia {
  id         Int     @id @default(autoincrement())
  platform   String
  profileUrl String
  username   String
  contact    Contact @relation(fields: [userId], references: [userId])
  userId     Int     @unique
}

model Contact {
  id          Int           @id @default(autoincrement())
  email       String?
  socialmedia SocialMedia[]
  profile     Profile       @relation(fields: [userId], references: [userId])
  userId      Int           @unique
}

model Profile {
  html_statement  String?
  html_additional String?
  portfolio_pdf   String?
  contact         Contact[]
  userId          Int       @id @unique
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  posts Post[]
}
