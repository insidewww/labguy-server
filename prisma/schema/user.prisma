model SocialMedia {
  id         Int      @id @default(autoincrement())
  platform   String?
  profileUrl String?
  username   String?
  contactId  Int
  Contact    Contact? @relation(fields: [contactId], references: [id], onDelete: Cascade)
}

model Contact {
  id          Int           @id @default(autoincrement())
  email       String?
  socialmedia SocialMedia[]
  userId      Int
  Profile     Profile?      @relation(fields: [userId], references: [userId], onDelete: Cascade)
}

model Profile {
  userId            Int       @id @unique
  html_statement    String?
  html_additional   String?
  portfolio_pdf_url String?   @default("https://archive.org/download/jakubkanna_PORTFOLIO_2024/jakubkanna_PORTFOLIO_2024.pdf")
  contact           Contact[]
  User              User      @relation(fields: [userId], references: [id])
}

model User {
  id      Int       @id @default(autoincrement())
  email   String    @unique
  hash    String
  salt    String
  posts   Post[]
  Profile Profile[]
}
