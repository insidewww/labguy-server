model SocialMedia {
  platform   String
  profileUrl String
  username   String
  contact    Contact @relation(fields: [userEmail], references: [userEmail])
  userEmail  String  @unique
}

model Contact {
  email       String?
  socialmedia SocialMedia[]
  profile     Profile       @relation(fields: [userEmail], references: [userEmail])
  userEmail   String        @unique
}

model Profile {
  statement_html  String
  additional_html String[]
  portfolio_pdf   String?
  contact         Contact[]
  user            User      @relation(fields: [userEmail], references: [email])
  userEmail       String    @unique
}

model User {
  email   String   @unique
  profile Profile?
  posts   Post[]
}
