model SocialMedia {
  id         Int      @id @default(autoincrement())
  platform   String?
  profileUrl String?
  username   String?
  contactId  Int
  Contact    Contact? @relation(fields: [contactId], references: [id])
}

model Contact {
  id          Int           @id @default(autoincrement())
  email       String?
  socialmedia SocialMedia[]
  userId      Int
  Profile     Profile?      @relation(fields: [userId], references: [userId])
}

model Profile {
  userId          Int       @id @unique
  html_statement  String?
  html_additional String?
  portfolio_pdf   String?   @default("https://archive.org/details/jakubkanna_PORTFOLIO_2024")
  contact         Contact[]
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  hash  String
  salt  String
  posts Post[]
}
