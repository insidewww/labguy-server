enum MediaType {
    IMAGE
    VIDEO
    THREE_D
}

model ImageRef {
    etag        String    @id @unique
    public_id   String?   @unique
    mediaType   MediaType @default(IMAGE)
    cld_url     String?   @unique
    path        String?   @unique
    filename    String?   @unique
    format      String?
    bytes       Int?
    description String?   @default("")
    width       Int?
    height      Int?
    tags        Tag[]

    createdAt DateTime  @default(now())
    updatedAt DateTime? @updatedAt

    preferences Preferences?
    works       Work[]
    projects    Project[]
}

model VideoRef {
    etag        String    @id @unique
    mediaType   MediaType @default(VIDEO)
    id          String?
    vimeo_url   String?   @unique
    sc_url      String?   @unique
    yt_url      String?   @unique
    title       String?   @default("Untitled")
    duration    String?
    definition  String?
    description String?   @default("")
    thumbnail   String?
    tags        Tag[]

    player_loop  Boolean @default(true)
    player_muted Boolean @default(false)

    createdAt DateTime  @default(now())
    updatedAt DateTime? @updatedAt

    preferences Preferences?
    works       Work[]
    projects    Project[]
}
