datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
}

generator jsonSchema {
  provider                 = "prisma-json-schema-generator"
  output                   = "./json"
  keepRelationScalarFields = "false" // default is "false"
  keepRelationFields       = "true" // default is "true"
}
